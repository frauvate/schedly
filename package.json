{
  "name": "productivity-widget",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },

  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^31.0.2"
  },

"build": {
  "appId": "com.esma.schedly",
  "productName": "schedly",
  "icon": "icon.png",
  "directories": {
    "output": "dist"
  },

  "files": [
    "**/*"
  ],

  "win": {
    "target": "nsis"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  }
}
}
